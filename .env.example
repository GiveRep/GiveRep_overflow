# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/giverep_public"

# Session Configuration
SESSION_SECRET="your-super-secret-session-key-here"

# Admin Configuration
ADMIN_PASSWORD="your-admin-password-here"

# External API Configuration
# Note: You'll need to obtain these from respective services
APIFY_API_TOKEN="your-apify-token-here"

# Optional: Redis Configuration (for caching)
REDIS_URL="redis://localhost:6379"

# Blockchain Configuration (Sui)
SUI_NETWORK="mainnet" # or "testnet" for testing

# Twitter API Configuration (if using Twitter features)
# Note: Obtain from Twitter Developer Portal
TWITTER_BEARER_TOKEN="your-twitter-bearer-token"

# Server Configuration
PORT=5000
NODE_ENV="development"

# Optional: Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000